{
  "name": "mcp-app-vanilla-server",
  "version": "0.1.0",
  "type": "module",
  "description": "MCP App server scaffold with vanilla JavaScript UI - rename and customize",
  "license": "MIT",
  "main": "server.ts",
  "scripts": {
    "build": "tsc --noEmit && cross-env INPUT=mcp-app.html vite build",
    "watch": "cross-env INPUT=mcp-app.html vite build --watch",
    "serve": "npx tsx server.ts",
    "start": "cross-env NODE_ENV=development npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:watch\" \"npm:serve\""
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^0.3.1",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "express": "^5.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
